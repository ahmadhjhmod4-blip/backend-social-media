PORT=5000
NODE_ENV=production
JWT_SECRET=change_this_to_long_random_secret

# Keep this as-is when using docker-compose with the included mongo service
MONGO_URI=mongodb://mongo:27017/saepel

# TURN (WebRTC call stability)
TURN_URL=turn:global.relay.metered.ca:80,turn:global.relay.metered.ca:80?transport=tcp,turn:global.relay.metered.ca:443,turns:global.relay.metered.ca:443?transport=tcp
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_password

# Push notifications (Firebase Admin service account)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----\n"
